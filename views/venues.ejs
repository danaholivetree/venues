      <form id='venueSearchForm'>
        <div class='form-row'>
          <div class="input-group mb-3 col-12 col-lg">
            <label for='state' class="control-label col-3 col-form-label" >State:</label>
              <select class="custom-select form-control stateSelector" name='state'></select>
          </div>
          <div class="input-group mb-3 col-12 col-lg">
            <label for='city' class="control-label col-3  col-form-label" >City:</label>
            <input type="text" name='city' class="form-control" aria-label="Default" aria-describedby="inputGroup-sizing-default">
          </div>
          <div class="input-group mb-3 col-12 col-lg">
            <label for='venue' class="control-label col-3  col-form-label" >Venue:</label>
            <input type="text" name='venue' class="form-control" aria-label="Default" aria-describedby="inputGroup-sizing-default">
          </div>
        </div>

        <div class='form-row'>
          <div id='capacity' class='input-group mb-3 col-lg-7 col-12 mx-auto'>
              <label for='capacity' class="control-label col-3 col-md-1  col-form-label capSelector" >Cap:</label>

              <div class="form-check form-check-inline">
                <input class="form-check-input" type="checkbox" id="any" value="any" checked>
                <label class="form-check-label" for="any">Any</label>
              </div>
              <div class="form-check form-check-inline ">
                <input class="form-check-input notany" type="checkbox" id="capxs" value="xsmall">
                <label class="form-check-label" for="capxs">< 100</label>
              </div>
              <div class="form-check form-check-inline">
                <input class="form-check-input notany" type="checkbox" id="caps" value="small">
                <label class="form-check-label" for="caps">101< 250</label>
              </div>
              <div class="form-check form-check-inline ">
                <input class="form-check-input notany" type="checkbox" id="capm" value="medium">
                <label class="form-check-label" for="capm">251 < 600</label>
              </div>
              <div class="form-check form-check-inline">
                <input class="form-check-input notany" type="checkbox" id="capl" value="large">
                <label class="form-check-label" for="capl">601 < 1200</label>
              </div>
              <div class="form-check form-check-inline">
                <input class="form-check-input notany" type="checkbox" id="capxl" value="xlarge">
                <label class="form-check-label" for="capxl">1200+</label>
              </div>

          </div>

          <div id='selector' class='input-group mb-3 col-lg-5 col-12'>
              <label for='selector' class="control-label col-3 col-md-3 col-form-label" >Select Only:</label>
                <div class="form-check form-check-inline">
                  <input class="form-check-input" type="checkbox" id="up-select" value="up">
                  <label class="form-check-label" for="up-select"><i class="material-icons md-18">thumb_up</i></label>
                </div>
                <div class="form-check form-check-inline">
                  <input class="form-check-input" type="checkbox" id="down-select" value="down">
                  <label class="form-check-label" for="down-select"><i class="material-icons md-18">thumb_down</i></label>
                </div>
                <div class="form-check form-check-inline">
                  <input class="form-check-input" type="checkbox" id="bookmark-select" value="bookmarked">
                  <label class="form-check-label" for="bookmark-select"><i class="material-icons md-18">bookmark</i></label>
                </div>
          </div>
        </div>
        <div class='form-row'>
          <div class='input-group mb-3 col-12'>
            <div class="col-2 mx-auto col-lg-1">
              <button type="submit" class="btn btn-default big-btn">SUBMIT</button>
            </div>
          </div>
        </div>
      </form>

    <form id='addVenueForm' class='hidden'>
      <div class='form-row'>
        <div class="input-group mb-3 col-12 col-lg-4">
            <label for='state' class="control-label col-3  col-form-label" >State:</label>
            <select autocomplete="nope" class="custom-select form-control stateSelector" id='state'></select>
        </div>
        <div class="input-group mb-3 col-12 col-lg-4">
          <label for='city' class="control-label col-3  col-form-label" >City:</label>
          <input type="text" id='city' class="form-control" aria-label="Default" aria-describedby="inputGroup-sizing-default">
        </div>
        <div class="input-group mb-3 col-12 col-lg-4">
          <label for='venue' class="control-label col-3  col-form-label" >Venue:</label>
          <input type="text" id='venue' autofocus class="form-control" data-target="#checkVenueModal" aria-label="Default" aria-describedby="inputGroup-sizing-default">
        </div>
      </div>
      <div class='form-row'>
        <div class="input-group mb-3 col-12 col-lg-4">
          <label for='url' class="control-label col-3  col-form-label" >Url:</label>
          <input type="url" id='url' class="form-control" placeholder="Facebook preferred!" aria-label="Default" aria-describedby="inputGroup-sizing-default">
        </div>
        <div class="input-group mb-3 col-12 col-lg-4">
          <label for='email' class="control-label col-3 col-form-label" >Email:</label>
          <input type="email" autocomplete="nope" id='email' class="form-control" aria-label="Default" aria-describedby="inputGroup-sizing-default">
        </div>
        <div class="input-group mb-3 col-12 col-lg-4">
          <label for='capacity' class="control-label col-3  col-form-label" >Cap:</label>
          <input type="number" autocomplete="nope" id='cap' class="form-control col-lg-3" aria-label="Default" aria-describedby="inputGroup-sizing-default">

          <div class="form-check form-check-inline px-3 col-3 col-lg-1">
            <input class="form-check-input" type="checkbox" id="diy" value="diy">
            <label class="form-check-label" for="diy">DIY</label>
          </div>
        </div>
      </div>

      <div id="checkVenueModal" class="modal">
        <div class="modal-inner">
          <div class="modal-content">
            <a data-modal-close>x</a>
            <div class='modal-body'></div>
            <div class="modal-footer">
              <button type="button" class="btn btn-default modal-close">No</button>
              <button type="button" id='confirmVenue' class="btn btn-default">Yes</button>
            </div>
          </div>
        </div>
      </div>

      <div id="checkInfoModal" class="modal">
        <div class="modal-inner">
          <div class="modal-content">
            <a data-modal-close>x</a>
            <div class='modal-body'></div>
            <div class="modal-footer">
              <button type="button" class="btn btn-default modal-close">No</button>
              <button type="button" id='acceptInfo' class="btn btn-default">Yes</button>
            </div>
          </div>
        </div>
      </div>

      <div class='form-row'>
        <div class='col-auto mx-auto' style="text-align:center;" id='errorMessage'></div>
      </div>
      <div class='form-row'>
        <div class="col-auto mx-auto my-3">
          <button type="submit" class="btn big-btn">SUBMIT</button>
        </div>
      </div>
    </form>

      <div class='stateDisplay' class='hidden' style='text-align:center;'></div>

      <table id='venueTable' class='table table-hover'>
        <thead>
          <!-- <tr class='row'> -->
            <th >State</th>
            <th >City</th>
            <th >Venue</th>
            <th scope='col' class='d-md-table-cell d-none '>Booking</th>
            <th scope='col' class='d-none d-md-table-cell'>Capacity</th>
            <th scope='col' class='d-none d-md-table-cell'></th>
            <th scope='col' class='d-none d-md-table-cell'></th>
            <th scope='col' class='d-none d-md-table-cell'></th>
          <!-- </tr> -->
        </thead>
        <tbody id='venuesList'>

        </tbody>
      </table>
      <div class='row'>
        <div class='col-auto mx-auto'>
          <div id='prevNext' class='btn-group hidden'>
            <button id='prev' type='button' class='btn big-btn'>Prev</button>
            <button id='next' type='button' class='btn big-btn'>Next</button>
          </div>
        </div>
      </div>
    </div>



